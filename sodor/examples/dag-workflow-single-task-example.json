{
    "apiVersion": "dag/v1",
    "kind": "Workflow",
    "metadata": {
        "name": "image-style-transfer",
        "namespace": "production",
        "labels": {
            "project": "ai-image",
            "type": "single-task"
        },
        "annotations": {
            "description": "Single image style transfer task",
            "owner": "ai-team@example.com"
        }
    },
    "spec": {
        "entrypoint": "style-transfer-task",
        "arguments": {
            "parameters": [
                {
                    "name": "image_url",
                    "value": "https://cdn.example.com/uploads/photo.jpg",
                    "description": "Input image URL"
                },
                {
                    "name": "style",
                    "value": "van-gogh",
                    "enum": ["van-gogh", "monet", "picasso", "anime"],
                    "description": "Art style"
                },
                {
                    "name": "callback_url",
                    "value": "https://api.example.com/webhook/image-complete",
                    "description": "Completion callback URL"
                }
            ]
        },
        "globalTimeout": "10m",
        "priority": 500,
        "templates": [
            {
                "name": "style-transfer-task",
                "queue": "gpu-render",
                "timeout": "5m",
                "inputs": {
                    "parameters": [
                        {
                            "name": "image_url",
                            "value": "{{workflow.parameters.image_url}}"
                        },
                        {
                            "name": "style",
                            "value": "{{workflow.parameters.style}}"
                        }
                    ]
                },
                "outputs": {
                    "parameters": [
                        {
                            "name": "output_url",
                            "valueFrom": {
                                "path": "/output/result_url.txt"
                            }
                        },
                        {
                            "name": "processing_time",
                            "valueFrom": {
                                "jsonPath": "$.processing_time_ms",
                                "path": "/output/metadata.json"
                            }
                        }
                    ]
                },
                "executor": {
                    "type": "container",
                    "config": {
                        "image": "ai-style-transfer:v3.2.1",
                        "command": ["python", "transfer.py"],
                        "args": [
                            "--input", "{{inputs.parameters.image_url}}",
                            "--style", "{{inputs.parameters.style}}",
                            "--output-dir", "/output"
                        ],
                        "env": [
                            {
                                "name": "CUDA_VISIBLE_DEVICES",
                                "value": "0"
                            },
                            {
                                "name": "OSS_ACCESS_KEY",
                                "valueFrom": {
                                    "secretKeyRef": {
                                        "name": "oss-credentials",
                                        "key": "access_key"
                                    }
                                }
                            },
                            {
                                "name": "OSS_SECRET_KEY",
                                "valueFrom": {
                                    "secretKeyRef": {
                                        "name": "oss-credentials",
                                        "key": "secret_key"
                                    }
                                }
                            }
                        ]
                    }
                },
                "resources": {
                    "cpu": "2",
                    "memory": "8Gi",
                    "gpu": 1,
                    "gpuType": "nvidia-t4"
                },
                "retryStrategy": {
                    "limit": 2,
                    "retryOn": ["transient-error", "timeout"],
                    "backoff": {
                        "duration": "30s",
                        "factor": 2,
                        "maxDuration": "2m"
                    }
                }
            },
            {
                "name": "callback-task",
                "queue": "api-call",
                "timeout": "30s",
                "inputs": {
                    "parameters": [
                        {"name": "url"},
                        {"name": "status"},
                        {"name": "result_url"}
                    ]
                },
                "executor": {
                    "type": "http",
                    "config": {
                        "method": "POST",
                        "url": "{{inputs.parameters.url}}",
                        "headers": {
                            "Content-Type": "application/json",
                            "X-Webhook-Signature": "{{secrets.webhook_secret}}"
                        },
                        "body": {
                            "event": "image.processed",
                            "workflow_id": "{{workflow.uid}}",
                            "status": "{{inputs.parameters.status}}",
                            "result_url": "{{inputs.parameters.result_url}}",
                            "timestamp": "{{workflow.finishedAt}}"
                        }
                    }
                },
                "retryStrategy": {
                    "limit": 3,
                    "retryOn": ["network-error", "timeout"],
                    "backoff": {
                        "duration": "5s",
                        "factor": 2,
                        "maxDuration": "1m"
                    }
                }
            }
        ],
        "hooks": {
            "onSuccess": {
                "template": "callback-task",
                "arguments": {
                    "parameters": [
                        {
                            "name": "url",
                            "value": "{{workflow.parameters.callback_url}}"
                        },
                        {
                            "name": "status",
                            "value": "success"
                        },
                        {
                            "name": "result_url",
                            "value": "{{workflow.outputs.parameters.output_url}}"
                        }
                    ]
                }
            },
            "onFailure": {
                "template": "callback-task",
                "arguments": {
                    "parameters": [
                        {
                            "name": "url",
                            "value": "{{workflow.parameters.callback_url}}"
                        },
                        {
                            "name": "status",
                            "value": "failed"
                        },
                        {
                            "name": "result_url",
                            "value": ""
                        }
                    ]
                }
            }
        }
    }
}
